<Window x:Class="ProfessionalEx2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfessionalEx2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="text" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="220" Height="414"/>
        <Button x:Name="Conect" Content="Conect to database" HorizontalAlignment="Left" Margin="275,64,0,0" VerticalAlignment="Top" Height="44" Width="125" Click="Conect_Click"/>
        <Button x:Name="Disconect" Content="Disconect to database" HorizontalAlignment="Left" Margin="275,190,0,0" VerticalAlignment="Top" Height="44" Width="125" Click="Disconect_Click"/>

    </Grid>
</Window>
